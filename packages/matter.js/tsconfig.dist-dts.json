/* Configuration for a distribution */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node", // Required to correctly resolve Babel imports
    "outDir": "dist/dts",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
}
