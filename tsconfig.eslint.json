// eslint is extremely slow and gets even slower with more packages.  This optimized configuration exposes all files as
// a single project for linting purposes
{
    "extends": "./packages/tools/tsc/tsconfig.base.json",
    "include": [
        "packages/**/*.ts",
        "compat/**/*.ts",
        "codegen/**/*.ts",
        "chip-testing/**/*.ts"
    ],
    "exclude": [
        "**/forwards/**/*.ts"
    ]
}
