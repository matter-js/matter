/* Configuration for tsfmt and eslint */
{
    "compilerOptions": {
      "module": "node16",
      "moduleResolution": "node16", // Required to support exports on package.json

      // Local dev compilation checks
      "forceConsistentCasingInFileNames": true,
      "noImplicitOverride": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strictNullChecks": true
    },
    "include": [
        "packages/**/*.ts",
        "tools/**/*.ts",
        "models/**/*.ts"
    ],
    "exclude": [
        "packages/*/dist",

        // This is formatted like a table and should remain that way
        "packages/matter.js/src/model/elements/Globals.ts"
    ]
}
